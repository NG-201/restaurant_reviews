<h1><%= @restaurant.name %></h1>
<%# <small><%= link_to "Delete", pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?' } %></small> %>

<ul>
  <li>name: <strong><%= @restaurant.name %></strong></li>
  <li>Address: <strong><%= @restaurant.address %></strong></li>
  <li>phone_number: <strong><%= @restaurant.phone_number %></strong></li>
  <li>category: <strong><%= @restaurant.category %></strong></li>
</ul>

<%= link_to "Back to restaurants list", restaurants_path %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %></li>
  <% end %>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
